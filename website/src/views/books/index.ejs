<%- include('../port/layout-start', {title: title}) %>
    <%- include('../port/menu') %>


        <h1>
            <%= title %>
        </h1>
        <% if (currentPage !== '/api/books/publish') { %>
            <% if (!user) { %>
                <a class="btn btn-sm btn-primary" href="/auth/login">Войти</a>
            <% } else { %>
                <a class="btn btn-sm btn-primary" href="/api/books/create">Добавить запись</a>
            <% } %>
        <% } %>
        <% if(books.length) { %>

            <table class="table table-striped table-sm  mt-3">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Заголовок</th>
                        <th scope="col">Кол-во просмотров</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    <% books.map((el, idx)=> { %>
                        <tr>
                            <th scope="row">
                                <%= idx +1 %>
                            </th>
                            <td>
                                <%= el.title %>
                            </td>
                            <td>
                                <%= el.count || 0 %>
                            </td>
                            <td class="text-right">
                            <% if (currentPage !== '/api/books/publish') { %>
                                <a class="btn btn-sm btn-success" href="/api/books/get/<%= el._id %>">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </a>
                                <a class="btn btn-sm btn-primary" href="/api/books/update/<%= el._id %>">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                                <form action="/api/books/delete/<%= el._id %>" method="POST" class="d-inline">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </form>

                                <% if (!el.isPublished && el.owner.toString() === user._id.toString()) { %>
                                    <form action="/api/books/publish/<%= el._id %>" method="POST" class="d-inline">
                                        <button class="btn btn-sm btn-danger">
                                            Publish
                                        </button>
                                    </form>
                                <% } %>
                                <% if (el.isPublished) { %>
                                    <form action="/api/books/unpublish/<%= el._id %>" method="POST" class="d-inline">
                                        <button class="btn btn-sm btn-danger">
                                            Unpublish
                                        </button>
                                    </form>
                                <% } %>
                            <% } else { %>
                                <a class="btn btn-sm btn-success" href="/api/books/publish/<%= el._id %>">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </a>
                            <% } %>
                            </td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>

            <% } else { %>
                <h3 class="mt-5">Записей пока нет</h3>
                <% } %>





                    <%- include('../port/layout-end') %>